<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="model"
            type="sampleproject.com.my.skeletonApp.rest.model.models.RemedyDataModel" />

        <import type="android.view.View"/>
    </data>
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_small_8dp"
        android:background="@color/white"
        app:cardCornerRadius="@dimen/space_tiny_5dp">
        <LinearLayout
            android:id="@+id/Data_certificate_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:orientation="vertical"
            android:gravity="start">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/space_huge_64dp"
                    android:layout_height="@dimen/space_huge_64dp"
                    android:scaleType="fitCenter"
                    android:padding="@dimen/space_small_8dp"
                    android:layout_gravity="center"
                    android:src="@drawable/pills_drug_image"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">
                        <TextView
                            android:id="@+id/time"
                            style="@style/BaseTextView.OpenSansRegular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="start"
                            tools:text="@string/app_name"
                            android:textColor="@color/mine_shaft"
                            android:layout_marginEnd="@dimen/space_tiny_5dp"
                            android:layout_weight="0.5"
                            android:paddingStart="@dimen/space_small_8dp"
                            android:layout_marginTop="@dimen/space_small_8dp"
                            android:text="@{model.dateCreated}"
                            android:textSize="@dimen/small_text_12sp"/>
                        <TextView
                            android:id="@+id/medicine"
                            style="@style/BaseTextView.OpenSansSemiBold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="end"
                            android:paddingEnd="@dimen/space_medium_16dp"
                            android:layout_weight="0.5"
                            android:textColor="@color/colorGreen"
                            android:layout_marginTop="@dimen/space_small_8dp"
                            android:text="@string/scheduled"
                            android:textSize="@dimen/small_text_12sp"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/title"
                        style="@style/BaseTextView.OpenSansRegular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="start"
                        android:textColor="@color/mine_shaft"
                        android:paddingStart="@dimen/space_small_8dp"
                        android:paddingEnd="@dimen/space_medium_16dp"
                        android:layout_marginTop="@dimen/space_small_8dp"
                        android:text="@{model.name}"
                        tools:text="@string/app_name"
                        android:textSize="@dimen/small_text_12sp"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>
